# MVG Display - Environment Variables
# Copy this file to .env and configure as needed

# -----------------------------------------------------
# API Configuration
# -----------------------------------------------------
API_PORT=5000
API_HOST=0.0.0.0

# -----------------------------------------------------
# MVG API Configuration
# -----------------------------------------------------
# Default station ID for initial display
DEFAULT_STATION_ID=de:09162:6

# -----------------------------------------------------
# Weather Integration
# -----------------------------------------------------
# OpenWeather API Key - Get one at https://openweathermap.org/api
OPENWEATHER_API_KEY=your_api_key_here

# -----------------------------------------------------
# UI Configuration
# -----------------------------------------------------
# Language settings: 'en' for English, 'de' for German
DEFAULT_LANGUAGE=en

# Display refresh interval in seconds
DEFAULT_REFRESH_INTERVAL=30

# Default theme (available: 'default', 'dark', 'light', 'mvg')
DEFAULT_THEME=default

# MVG Display Configuration
PORT=3000